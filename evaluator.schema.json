{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvaluationResult",
  "description": "A structured evaluation of a translation attempt.",
  "type": "object",
  "properties": {
    "rubric": {
      "description": "A detailed scorecard of the translation's quality.",
      "type": "object",
      "properties": {
        "semantic_accuracy": {
          "type": "boolean"
        },
        "tonal_fidelity": {
          "type": "boolean"
        },
        "natural_fluency": {
          "type": "boolean"
        },
        "nuance_preservation": {
          "type": "boolean"
        }
      },
      "required": [
        "semantic_accuracy",
        "tonal_fidelity",
        "natural_fluency",
        "nuance_preservation"
      ]
    },
    "grade": {
      "description": "The final, overall grade based on the rubric.",
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "feedback": {
      "description": "A detailed critique and explanation for the grade, formatted in Markdown.",
      "type": "string"
    }
  },
  "required": [
    "rubric",
    "grade",
    "feedback"
  ]
}